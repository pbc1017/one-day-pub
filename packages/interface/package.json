{
  "name": "@one-day-pub/interface",
  "version": "1.0.0",
  "description": "Shared interfaces and types for one-day-pub monorepo",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "default": "./dist/types/*.js"
    },
    "./dtos/*": {
      "types": "./dist/dtos/*.d.ts",
      "default": "./dist/dtos/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "dotenv -e ../../.env -- tsc --watch",
    "build": "dotenv -e ../../.env -- tsc",
    "start": "echo 'This is a library package'",
    "clean": "rm -rf dist tsconfig.tsbuildinfo node_modules",
    "lint": "dotenv -e ../../.env -- eslint . --ext .ts",
    "lint:fix": "dotenv -e ../../.env -- eslint . --ext .ts --fix",
    "format": "dotenv -e ../../.env -- prettier --write .",
    "format:check": "dotenv -e ../../.env -- prettier --check ."
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@nestjs/swagger": "^7.4.2",
    "class-validator": "^0.14.1"
  },
  "peerDependencies": {
    "@nestjs/swagger": "^7.0.0",
    "class-validator": "^0.14.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
