{
  "name": "@one-day-pub/api",
  "version": "1.0.0",
  "description": "NestJS backend server for one-day-pub monorepo",
  "author": "Perry",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development dotenv -e ../../.env -- nest start --watch",
    "build": "NODE_ENV=production dotenv -e ../../.env -- nest build",
    "start": "NODE_ENV=production dotenv -e ../../.env -- node dist/main.js",
    "clean": "rm -rf dist node_modules",
    "lint": "dotenv -e ../../.env -- eslint . --ext .ts",
    "lint:fix": "dotenv -e ../../.env -- eslint . --ext .ts --fix",
    "format": "dotenv -e ../../.env -- prettier --write .",
    "format:check": "dotenv -e ../../.env -- prettier --check .",
    "test": "dotenv -e ../../.env -- jest",
    "test:watch": "dotenv -e ../../.env -- jest --watch",
    "test:cov": "dotenv -e ../../.env -- jest --coverage",
    "test:debug": "dotenv -e ../../.env -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ../../.env -- jest --config ./test/jest-e2e.json",
    "db": "cd ../../deploy && docker-compose --env-file ../.env -f docker-compose.yml -f docker-compose.local.yml",
    "db:up": "npm run db -- up mysql -d",
    "db:down": "npm run db -- down",
    "db:restart": "npm run db -- restart mysql",
    "db:logs": "npm run db -- logs -f mysql",
    "db:reset": "npm run db -- down -v && npm run db -- up mysql -d",
    "db:cli": "dotenv -e ../../.env -- sh -c 'HOST=$DB_HOST; if [ \"$HOST\" = \"localhost\" ]; then HOST=127.0.0.1; fi; mysql -h $HOST -P $DB_PORT -u $DB_USERNAME -p$DB_PASSWORD $DB_NAME'",
    "db:status": "npm run db -- ps",
    "migration:generate": "dotenv -e ../../.env -- typeorm migration:generate -d dist/config/typeorm.config.js",
    "migration:create": "dotenv -e ../../.env -- typeorm migration:create",
    "migration:run": "dotenv -e ../../.env -- typeorm migration:run -d dist/config/typeorm.config.js",
    "migration:revert": "dotenv -e ../../.env -- typeorm migration:revert -d dist/config/typeorm.config.js",
    "migration:show": "dotenv -e ../../.env -- typeorm migration:show -d dist/config/typeorm.config.js"
  },
  "dependencies": {
    "@one-day-pub/interface": "workspace:*",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/typeorm": "^10.0.1",
    "@types/uuid": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "mailgun-js": "^0.22.0",
    "mailgun.js": "^12.0.3",
    "mysql2": "^3.6.5",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mailgun-js": "^0.22.18",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
